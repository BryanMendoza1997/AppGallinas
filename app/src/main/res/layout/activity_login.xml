<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="219dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="1dp"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/logofinal"
        tools:layout_editor_absoluteY="0dp" />

    <EditText
        android:id="@+id/txtcontrasenia"
        android:layout_width="310dp"
        android:layout_height="49dp"
        android:layout_below="@+id/txtcorreo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="33dp"
        android:drawableLeft="@drawable/ic_contrasenia"
        android:ems="10"
        android:fontFamily="@font/lora"
        android:inputType="textPassword"
        android:maxLength="30"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="308dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtcontrasenia"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/borde_boton_inicio"
        android:fontFamily="@font/lora"
        android:onClick="iniciar"
        android:text="Iniciar Sesión"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button3"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="135dp"
        android:layout_marginTop="23dp"
        android:fontFamily="@font/lora"
        android:onClick="registrarse"
        android:text="Registrarse"
        android:textColor="@color/colorAccent"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="21dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/lora"
        android:text="Olvido su contraseña? presione" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="8dp"
        android:layout_toEndOf="@+id/textView6"
        android:fontFamily="@font/lora"
        android:text="aquí"
        android:textColor="@color/colorPrimaryDark" />

    <EditText
        android:id="@+id/txtcorreo"
        android:layout_width="311dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="34dp"
        android:drawableLeft="@drawable/ico_email"
        android:ems="10"
        android:fontFamily="@font/lora"
        android:inputType="textEmailAddress"
        android:maxLength="75"
        android:textSize="24sp" />

</RelativeLayout>