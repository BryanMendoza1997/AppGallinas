<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="#E2E2E2">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:background="#E2E2E2">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/txtciudad"
                android:layout_width="177dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txttitulo"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="26dp"
                android:layout_toEndOf="@+id/imageView"
                android:text="Quevedo, Ecuador" />

            <TextView
                android:id="@+id/txttitulo"
                android:layout_width="363dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="6dp"
                android:layout_marginTop="17dp"
                android:text="Gallina Ponedora Colorada"
                android:textColor="#100F0F"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageproducto"
                android:layout_width="154dp"
                android:layout_height="140dp"
                android:layout_below="@+id/txttitulo"
                android:layout_alignParentStart="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/gallina_0" />

            <TextView
                android:id="@+id/textopeso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtciudad"
                android:layout_marginStart="14dp"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@+id/imageproducto"
                android:text="Peso:"
                android:textColor="#0E0E0E"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textopeso"
                android:layout_marginStart="15dp"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@+id/imageproducto"
                android:text="Precio por libra:"
                android:textColor="#0E0E0E"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtprecio"
                android:layout_width="114dp"
                android:layout_height="19dp"
                android:layout_below="@+id/textopeso"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="12dp"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="156dp"
                android:layout_toEndOf="@+id/textView2"
                android:text="0,93" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView2"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/imageproducto"
                android:text="Estado: "
                android:textColor="#090909"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtestado"
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView2"
                android:layout_marginStart="9dp"
                android:layout_marginTop="19dp"
                android:layout_toEndOf="@+id/textView5"
                android:text="Viva o Muerta" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txttitulo"
                android:layout_marginStart="12dp"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@+id/imageproducto"
                app:srcCompat="@drawable/ic_ubicacion" />

            <TextView
                android:id="@+id/txtdescripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageproducto"
                android:layout_alignParentStart="true"
                android:layout_marginStart="7dp"
                android:layout_marginTop="11dp"
                android:text="Vendo gallo y gallina Enanas muy buena línea, y muy enanos. La gallina esta poniendo muy lindas aves negociables O CAMBIO POR GALLITOS FINOS O GALLINITAS"
                android:textColor="#201E1E" />

            <Button
                android:id="@+id/btnañadircli"
                android:layout_width="101dp"
                android:layout_height="33dp"
                android:layout_below="@+id/txtdescripcion"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="12dp"
                android:background="@android:color/holo_blue_light"
                android:text="Añadir"
                android:textColor="#ECE8E8" />

            <TextView
                android:id="@+id/txtpeso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtciudad"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="7dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:layout_toEndOf="@+id/textopeso"
                android:text="5-10 libras" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>